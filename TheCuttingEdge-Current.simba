Procedure AntiBan;

var
  I, AB: Integer;

begin
  if (AntiBanAmount <> 0) then
  begin
    if (AntiBanAmount > 100) then
      AB := 1000
    else
      AB := AntiBanAmount * 10;
    I := Random(90 * (Ceil(1000/AB))) + 1;
    case I of
      1: RandomRClick;
      2,3:
        begin
          HoverSkill('woodcutting', False);
          SleepAndMoveMouse(100);
        end;
      4: PickUpMouse;
      5: RandomAngle(True);
      6: RandomMovement;
      7: BoredHuman;
      8..10: SleepAndMoveMouse(500);
    end;
    if (I <= 10) then
    begin
      DebugIt('Ran AntiBan Procedure.');
      Maintenance('W');
    end;
  end;
end;

