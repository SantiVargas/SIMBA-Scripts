  Check: Integer;

begin
  Result := False;
  AntiRandoms;

  Check := 0;
  repeat
    Inc(Check);
    FindSymbols(SPoints,'tree');
    Result := (Length(SPoints) = 2);
  until Result or (Check > 10);

  DebugIt('InTreeArea: ' + ToStr(Result));
end;

